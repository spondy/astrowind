---
import Content from '~/components/widgets/Content.astro';
import Features2 from '~/components/widgets/Features2.astro';
import Hero from '~/components/widgets/Hero.astro';
import Testimonials from '~/components/widgets/Testimonials.astro';
import Layout from '~/layouts/PageLayout.astro';

const metadata = {
  title: 'Services',
};
---

<Layout metadata={metadata}>
  <!-- Hero Widget ******************* -->

  <Hero
    tagline="What's going on"
    title="Events at the Artifactory"
    subtitle="Come and see what we have on hand. We've put together an environment where anyone can find the tools they need to help turn your concepts into realities."
  />

  <!-- Calendar ************** -->

    <div style="overflow: hidden" class="mx-auto max-w-6xl w-11/12 rounded-lg bg-neutral-500 shadow-lg">
      <iframe src="https://embed.styledcalendar.com/#skcl6AQTLiBY7LcRNZPw" title="Styled Calendar" class="styled-calendar-container" style="width: 100%; border: none;" data-cy="calendar-embed-iframe"></iframe>
      <script async type="module" src="https://embed.styledcalendar.com/assets/parent-window.js"></script>
    </div>

    <div style="overflow: hidden" class="mx-auto max-w-6xl w-11/12 rounded-lg bg-neutral-500 shadow-lg">
      <iframe
          src="https://www.google.com/maps/embed?pb=!1m18!1m12!1m3!1d3387.173686881216!2d115.80801111533235!3d-31.90187792709456!2m3!1f0!2f0!3f0!3m2!1i1024!2i768!4f13.1!3m3!1m2!1s0x2a32afa21e4de70f%3A0x2249a8489669686a!2s8%2F16%20Guthrie%20St%2C%20Osborne%20Park%20WA%206017!5e0!3m2!1sen!2sau!4v1610167974057!5m2!1sen!2sau"
          width="100%"
          className="mb-4 h-mapSmall sm:h-map"
          frameBorder="0"
          allowFullScreen=""
          aria-hidden="false"
          tabIndex="0"></iframe>
    </div>

  <!-- Features2 Widget ************** -->

  <Features2
    id="location"
    title="Our location"
    tagline="find us"
    columns={3}
    items={[
      {
        title: 'Address',
        description: 'Unit 8 / 16 Guthrie Street<br> Osborne Park WA 6017',
      },
      {
        title: 'Nearest Bus Stop',
        description: '<a href = "https://www.transperth.wa.gov.au/timetablepdfs/Bus%20Timetable%2059%2020220717.pdf">Route 413</a> stops outside the Artifactory.<br> Mon-Fri only, morning and afternoon.',
      },
      {
        title: 'Nearest Train',
        description: 'Stirling Station and Glendalough Station',
      },
    ]}
  />

    <div style="overflow: hidden" class="mx-auto max-w-5xl w-11/12 rounded-lg bg-neutral-500 shadow-lg">
      <iframe src="https://snazzymaps.com/embed/517349" width="100%" height="600px" style="border:none;"></iframe>
    </div>


  <!-- Hero Widget ******************* -->

  <Hero
    callToAction={{ text: 'Become a member', href: '/pricing', icon: 'tabler:users' }}
    callToAction2={{ text: 'Visit us', href: '/first_visit'}}
  >

    <Fragment slot="subtitle">
      <span class="hidden sm:inline">
        Get started today!</span>
    </Fragment>
  </Hero>


</Layout>
